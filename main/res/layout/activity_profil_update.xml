<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:src="@drawable/turnover" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Bilgilerim"
            android:fontFamily="@font/montserratbold"
            android:textColor="#000000"
            android:textSize="35sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp">

        <EditText
            android:id="@+id/ad"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:background="@drawable/border"
            android:paddingLeft="20dp"
            android:hint="Ad"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/grey"
            android:drawableStart="@drawable/ic_baseline_drive_file_rename_outline_24"
            android:drawablePadding="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/soyad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/border"
            android:paddingLeft="20dp"
            android:hint="Soyad"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/grey"
            android:drawableStart="@drawable/ic_baseline_drive_file_rename_outline_24"
            android:drawablePadding="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/border"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:hint="Email"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/grey"
            android:drawableStart="@drawable/ic_baseline_alternate_email_24"
            android:drawablePadding="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/tc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/border"
            android:paddingLeft="20dp"
            android:hint="T.C Kimlik"
            android:enabled="false"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/grey"
            android:drawableStart="@drawable/ic_baseline_person_pin_24"
            android:drawablePadding="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/passw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/border"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:hint="Parola"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/grey"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="@dimen/_10sdp"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:text="bilgileri kaydet"
            android:onClick="onClickBtn"
            android:background="@drawable/borderbutton"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/montserratsemibold"
            tools:ignore="MissingConstraints,OnClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:onClick="onClickBtn1"
            android:text="Profil Sayfasına Geri Dön"
            android:textColor="?attr/colorPrimary"
            android:textSize="15sp"
            android:fontFamily="@font/montserratbold"
            tools:ignore="MissingConstraints,OnClick" />

    </LinearLayout>
</LinearLayout>